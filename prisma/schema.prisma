generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_CONNECTION_STRING")
}

model User {
  id    String @id @default(cuid()) @map("_id")
  lists List[]
}

type List {
  id    String
  title String
  cards Card[]
}

type Card {
  id             String
  title          String
  description    String?
  tags           Tag[]
  startDate      DateTime
  endDate        DateTime
  comments       Comment[]
  checklistItems ChecklistItem[]
}

type Tag {
  id    String
  name  String
  color String
}

type Comment {
  id   String
  text String
}

type ChecklistItem {
  id        String
  title     String
  completed Boolean
}
